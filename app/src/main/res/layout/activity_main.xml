<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFF"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="title"
                    android:textColor="@color/vline"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    />

                <ImageButton
                    android:id="@+id/button_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:paddingRight="10dp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/button_tick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="10dp"
                    android:visibility="gone"

                    />

                <ImageButton
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="5dp"
                    android:visibility="gone"

                    />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#DCDCDC"
            android:layout_below="@+id/title"/>
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFF"
            >

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFF"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/toolbar_close"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFF"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:background="#FFFF">

                        <ImageView
                            android:id="@+id/button_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingTop="0dp"
                            android:paddingLeft="0dp"
                            android:src="@drawable/menu_close"
                            android:clickable="true"
                            android:onClick="close_menu"
                            />

                    </RelativeLayout>

                </FrameLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_below="@+id/toolbar_close">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/container_tiwen"
                        android:clickable="true"
                        android:onClick="perform_action"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="开始提问"
                            android:id="@+id/menu_tiwen"
                            android:layout_gravity="center_horizontal|top"
                            android:textColor="@color/menuForecolor"
                            android:textSize="24dp"
                            android:paddingLeft="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container_tiwen"
                        android:layout_centerHorizontal="true"
                        android:paddingRight="10dp"
                        android:clickable="true"
                        android:onClick="perform_action"
                        android:id="@+id/container_liebiao">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="答卷列表"
                            android:id="@+id/menu_liebiao"
                            android:layout_gravity="center_horizontal|top"
                            android:textColor="@color/menuForecolor"
                            android:textSize="24dp"
                            android:paddingLeft="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />
                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:id="@+id/container_dajuanshu"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="right"
                            android:background="@drawable/menu_count">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="2"
                                android:id="@+id/txt_dajuanshu"
                                android:layout_gravity="center"
                                android:textColor="@color/White"
                                android:textSize="12dp"
                                android:gravity="center_vertical|center_horizontal" />
                        </FrameLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container_liebiao"
                        android:id="@+id/container_fanyi"
                        android:clickable="true"
                        android:onClick="perform_action"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="联系翻译"
                            android:id="@+id/menu_fanyi"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/menuForecolor"
                            android:textSize="24dp"
                            android:paddingLeft="20dp"
                            android:layout_alignParentLeft="true"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container_fanyi"
                        android:layout_alignParentLeft="true"
                        android:clickable="true"
                        android:onClick="perform_action"
                        android:id="@+id/container_bumen"
                        android:layout_alignParentStart="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="联系有关部门"
                            android:id="@+id/menu_bumen"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/menuForecolor"
                            android:textSize="24dp"
                            android:paddingLeft="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container_bumen"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/container_shiguan"
                        android:clickable="true"
                        android:onClick="perform_action"
                        android:layout_alignParentStart="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="联系使馆"
                            android:id="@+id/menu_shiguan"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/menuForecolor"
                            android:textSize="24dp"
                            android:paddingLeft="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:id="@+id/container_dropdown_1"
                            android:layout_gravity="right"
                            android:paddingRight="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/img_shiguan_dropdown"
                                android:layout_gravity="center"
                                android:src="@drawable/menu_sub_close"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal" />
                        </FrameLayout>
                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container_shiguan"
                        android:id="@+id/container_shiguan_sub"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="perform_action"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/container_shiguan_sub_vietnam"
                            android:clickable="true"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="越南使馆信息"
                                android:id="@+id/menu_sub_vietnam"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/menuForecolor"
                                android:textSize="16dp"
                                android:paddingLeft="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/container_shiguan_sub_vietnam"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/container_shiguan_sub_laos"
                            android:clickable="true"
                            android:onClick="perform_action"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="老挝使馆信息"
                                android:id="@+id/menu_sub_laos"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/menuForecolor"
                                android:textSize="16dp"
                                android:paddingLeft="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/container_shiguan_sub_laos"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/container_shiguan_sub_cambodia"
                            android:clickable="true"
                            android:onClick="perform_action"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="柬埔寨使馆信息"
                                android:id="@+id/menu_sub_cambodia"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/menuForecolor"
                                android:textSize="16dp"
                                android:paddingLeft="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/container_shiguan_sub_cambodia"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/container_shiguan_sub_thai"
                            android:clickable="true"
                            android:onClick="perform_action"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="缅甸使馆信息"
                                android:id="@+id/menu_sub_thai"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/menuForecolor"
                                android:textSize="16dp"
                                android:paddingLeft="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                />
                        </FrameLayout>

                    </RelativeLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container_shiguan_sub"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/container_zhengce"
                        android:clickable="true"
                        android:onClick="perform_action"
                        android:layout_alignParentStart="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="相关政策"
                            android:id="@+id/menu_zhengce"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/menuForecolor"
                            android:textSize="24dp"
                            android:paddingLeft="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:id="@+id/container_dropdown_2"
                            android:layout_gravity="right"
                            android:paddingRight="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/img_zhengce_dropdown"
                                android:layout_gravity="center"
                                android:src="@drawable/menu_sub_close"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal" />
                        </FrameLayout>
                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container_zhengce"
                        android:id="@+id/container_zhengce_sub"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="perform_action"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/container_zhengce_sub_gongan"
                            android:clickable="true"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="公安打拐指南"
                                android:id="@+id/menu_sub_gongan"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/menuForecolor"
                                android:textSize="16dp"
                                android:paddingLeft="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/container_zhengce_sub_gongan"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/container_zhengce_sub_minzheng"
                            android:clickable="true"
                            android:onClick="perform_action"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="民政救助规程"
                                android:id="@+id/menu_sub_minzheng"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/menuForecolor"
                                android:textSize="16dp"
                                android:paddingLeft="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/container_zhengce_sub_minzheng"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/container_zhengce_sub_shouhai"
                            android:onClick="perform_action"
                            android:clickable="true"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="拐卖受害人识别指标"
                                android:id="@+id/menu_sub_shouhai"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/menuForecolor"
                                android:textSize="16dp"
                                android:paddingLeft="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/container_zhengce_sub_shouhai"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/container_zhengce_sub_guojidingyi"
                            android:clickable="true"
                            android:onClick="perform_action"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="国际国内法律定义"
                                android:id="@+id/menu_sub_guojidingyi"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/menuForecolor"
                                android:textSize="16dp"
                                android:paddingLeft="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/container_zhengce_sub_guojidingyi"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/container_zhengce_sub_guojiajihua"
                            android:clickable="true"
                            android:onClick="perform_action"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="国家反拐行动计划"
                                android:id="@+id/menu_sub_guojiajihua"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/menuForecolor"
                                android:textSize="16dp"
                                android:paddingLeft="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                />
                        </FrameLayout>
                    </RelativeLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container_zhengce_sub"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/container_bangzhu"
                        android:clickable="true"
                        android:onClick="perform_action"
                        android:layout_alignParentStart="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="关于本软件"
                            android:id="@+id/menu_bangzhu"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/menuForecolor"
                            android:textSize="24dp"
                            android:paddingLeft="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />
                    </FrameLayout>

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

    </FrameLayout>

</android.support.v4.widget.DrawerLayout>
