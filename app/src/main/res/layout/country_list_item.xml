<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal" >    
    <ImageView
        android:id="@+id/imgViewFlag"
        android:layout_height="70dp"
        android:layout_width="85dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="0dp"
        android:src="@drawable/en"
        />
    
    <TextView 
        android:id="@+id/txtViewCountryName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/imgViewFlag"
        android:text="Vietnam"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/txtViewCountryName_cn"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/imgViewFlag"
        android:layout_below="@+id/txtViewCountryName"
        android:text="china"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:paddingTop="5dp"
        android:textColor="#000"
        android:paddingLeft="10dp"
        />
</RelativeLayout>
