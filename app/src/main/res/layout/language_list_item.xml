<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal" >    
    
    <ImageView 
        android:id="@+id/imgViewFlag"
        android:layout_height="16px"
        android:layout_width="20px"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp" />
    
    <TextView 
        android:id="@+id/txtViewCountryName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/imgViewFlag"
        android:text="Vietnam"/>

    <TextView
        android:id="@+id/txtViewSubCountryName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/txtViewCountryName"
        android:textSize="11dp"
        android:text="aleluda"/>

</RelativeLayout>
